{
  "name": "sterling",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@sterling/web",
    "dev:mobile": "turbo dev --filter=@sterling/mobile",
    "build": "turbo build",
    "build:web": "turbo build --filter=@sterling/web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18"
  }
}
