{
  "expo": {
    "name": "Sterling",
    "slug": "sterling",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "scheme": "sterling",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e293b"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sterling.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely access your Sterling account"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e293b"
      },
      "package": "com.sterling.app",
      "edgeToEdgeEnabled": true,
      "permissions": ["USE_BIOMETRIC", "USE_FINGERPRINT"]
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#020617"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Sterling to use Face ID for authentication"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "sterling",
          "project": "sterling-mobile"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
